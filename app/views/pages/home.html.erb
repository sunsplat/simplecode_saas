<div class="jumbotron text-center">
    <h1>Welcome to HaPsit</h1>
    <h3>A membership site connecting trusted professional House and Pet sitters to home owners.</h3>
</div>

<div class="row">
    <% if user_signed_in? %>
        <div class="col-md-6">
            <div class="well">
                <h2 class="text-center">Your Profile</h2>
                    <% if current_user.profile %>
                    <!-- show profile edit links -->
                    
                        <%= link_to "Edit your profile", "#", class: 'btn btn-default btn-large btn-block' %>
                        <%= link_to "View your profile", user_path(current_user), class: 'btn btn-default btn-large btn-block' %>
                    <% else %>
                        <p>Create your profile so that home-owners can find you!</p>
                    <!-- show profile create links -->
                        <%= link_to "Create your profile", new_user_profile_path(current_user), class: 'btn btn-default btn-large btn-block' %>
                    <% end %>
            </div>
        </div>
        <div class="col-md-6">
            <div class="well">
                <h2 class="text-center">Community</h2>
                <p>Visit the community to connect with other sitters and home-owners.</p>
                <%= link_to "Visit the community", "#", class: 'btn btn-default btn-large btn-block' %>
            </div>
            
        </div>
    <% else %>
        <div class="col-md-6">
            <div class="well">
                <h2 class="text-center">Basic Membership</h2>
                <h4>Sign up for free and get basic access. Create a profile and view available sitters.</h4><br />
                <%= link_to "Sign up with Basic", new_user_registration_path(plan: @basic_plan.id), class: 'btn btn-primary btn-lg btn-block' %>
            </div>
        </div>
        <div class="col-md-6">
            <div class="well">
                <h2 class="text-center">Pro Membership</h2>
                <h4>Sign up for the pro account for $10/month and get access to the community.</h4><br />
                <%= link_to "Sign up with Pro", new_user_registration_path(plan: @pro_plan.id), class: 'btn btn-success btn-lg btn-block' %>
            </div>
        </div>
    <% end %>
</div>
